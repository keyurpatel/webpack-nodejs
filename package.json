    "html-webpack-plugin": "^4.0.1",
    "nodemon": "^1.18.9",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.4",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-bundle-size-analyzer": "^3.0.0",
    "webpack-cli": "^3.2.1",
