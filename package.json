{
  "name": "webpack-nodejs",
  "version": "1.0.0",
  "description": "Sample of using webpack + nodejs + express",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode production",
    "start": "npm run build && node src/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "webpack",
    "nodejs",
    "express"
  ],
  "author": "Keyur Patel",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keyurpatel/webpack-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/keyurpatel/webpack-nodejs/issues"
  },
  "homepage": "https://github.com/keyurpatel/webpack-nodejs#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.4",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.0-beta.6",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.1.0",
